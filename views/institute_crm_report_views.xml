<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View for Report -->
    <record id="view_crm_lead_report_institute_tree" model="ir.ui.view">
        <field name="name">crm.lead.report.institute.tree</field>
        <field name="model">crm.lead.report.institute</field>
        <field name="arch" type="xml">
            <tree string="Admission Officer Performance" create="false" delete="false" edit="false">
                <field name="user_id" string="Admission Officer"/>
                <field name="overdue_count" string="Overdue" sum="Total Overdue"/>
                <field name="due_count" string="Due" sum="Total Due"/>
                <field name="active_count" string="Active" sum="Total Active"/>
                <field name="won_count" string="Won" sum="Total Won"/>
                <field name="lost_count" string="Lost" sum="Total Lost"/>
                <field name="total_count" string="Total" sum="Grand Total"/>
            </tree>
        </field>
    </record>

    <!-- Pivot View for Report -->
    <record id="view_crm_lead_report_institute_pivot" model="ir.ui.view">
        <field name="name">crm.lead.report.institute.pivot</field>
        <field name="model">crm.lead.report.institute</field>
        <field name="arch" type="xml">
            <pivot string="Admission Officer Analysis" display_quantity="true">
                <field name="user_id" type="row"/>
                <field name="overdue_count" type="measure"/>
                <field name="due_count" type="measure"/>
                <field name="active_count" type="measure"/>
                <field name="won_count" type="measure"/>
                <field name="lost_count" type="measure"/>
                <field name="total_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View for Report -->
    <record id="view_crm_lead_report_institute_graph" model="ir.ui.view">
        <field name="name">crm.lead.report.institute.graph</field>
        <field name="model">crm.lead.report.institute</field>
        <field name="arch" type="xml">
            <graph string="Admission Officer Performance" type="bar" stacked="True">
                <field name="user_id"/>
                <field name="overdue_count" type="measure"/>
                <field name="due_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Search View for Report -->
    <record id="view_crm_lead_report_institute_search" model="ir.ui.view">
        <field name="name">crm.lead.report.institute.search</field>
        <field name="model">crm.lead.report.institute</field>
        <field name="arch" type="xml">
            <search string="Search Admission Officer Report">
                <field name="user_id" string="Admission Officer"/>
                <filter string="Has Overdue" name="has_overdue" domain="[('overdue_count', '>', 0)]"/>
                <filter string="Has Due" name="has_due" domain="[('due_count', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Admission Officer" name="group_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Report -->
    <record id="action_crm_lead_report_institute" model="ir.actions.act_window">
        <field name="name">Admission Officer Performance</field>
        <field name="res_model">crm.lead.report.institute</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="search_view_id" ref="view_crm_lead_report_institute_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data available yet
            </p>
            <p>
                This report shows the performance of admission officers based on their lead management.
                It displays overdue leads, due leads, and overall statistics.
            </p>
        </field>
    </record>

</odoo>
